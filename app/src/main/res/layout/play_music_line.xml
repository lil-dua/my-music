<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_black"
    android:layout_marginBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/textViewPlayMusicIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:text="1"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewPlayMusicNameSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewPlayMusicIndex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="Name of Song"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewPlayMusicSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPlayMusicNameSong"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textViewPlayMusicIndex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Singer"
            android:textColor="@color/accent"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>