<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativePlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:padding="7dp">
                <TextView
                    android:id="@+id/textViewTitlePlaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top PLayList"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewMorePLaylist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="More"
                    android:textColor="#F3FFC107"
                    android:textSize="18sp" />
        </RelativeLayout>

        <ListView
            android:id="@+id/listViewPlaylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativePlaylist" />

</RelativeLayout>