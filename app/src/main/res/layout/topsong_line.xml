<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EB191414">

    <ImageView
        android:id="@+id/imageViewTopSong"
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:text="Song Name"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageViewTopSong"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:id="@+id/textViewTopSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="18sp"
        android:textColor="@color/yellow"
        android:text="Singer Name"
        android:maxLines="1"
        android:layout_toRightOf="@id/imageViewTopSong"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textViewTopSongName"
        android:id="@+id/textViewTopSongSingerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_love_none_50"
        android:id="@+id/imageViewLike"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</RelativeLayout>